# MongoDB Configuration
MONGO_URI=mongodb://admin:password@localhost:27017
MONGO_DATABASE=texflow

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=texflow
MINIO_USE_SSL=false

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_PRIVATE_KEY_PATH=./keys/jwt-private.pem
JWT_PUBLIC_KEY_PATH=./keys/jwt-public.pem
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=168h

# Service Ports
AUTH_SERVICE_PORT=8080
PROJECT_SERVICE_PORT=8081
WEBSOCKET_SERVICE_PORT=8082
COLLABORATION_SERVICE_PORT=8083
COMPILATION_SERVICE_PORT=8084

# Kong API Gateway
KONG_ADMIN_URL=http://localhost:8001
KONG_PROXY_URL=http://localhost:8000

# Compilation Configuration
COMPILATION_TIMEOUT=30s
COMPILATION_MEMORY_LIMIT=2147483648
COMPILATION_CPU_LIMIT=2
MAX_COMPILATION_WORKERS=10

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Environment
ENVIRONMENT=development
LOG_LEVEL=info
